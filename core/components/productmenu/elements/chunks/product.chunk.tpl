<tr class="[[+idx:mod:notempty=`odd`:default=`even`]] [[+feature:notempty=`featured`:default=`regular`]]">
    <td title="[[+description]]">
        [[+image:notempty=`
            <img src="[[+image]]" alt="[[+name]]" />
        `]]
        [[+name]]
    </td>
    <td>[[+dimensions]]</td>
    <td>[[+requirements]]</td>
    <td>
        [[+old_price:notempty=`<del>[[+old_price]]</del><br />`]]
        [[+current_price]]
    </td>
</tr>